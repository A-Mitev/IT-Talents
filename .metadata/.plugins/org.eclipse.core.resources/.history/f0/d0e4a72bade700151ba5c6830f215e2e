package exam;

import java.time.LocalDateTime;

public class Mail {
	
	private ObsluzvanClient receiver;
	private ObsluzvanClient sender;
	private String sudurzanie;
	private LocalDateTime date;
	private Employee courier;
	private int systemNumber;
	private static int systemNumberCounter = 0;
	

	public Mail(ObsluzvanClient receiver, ObsluzvanClient sender, String sudurzanie, LocalDateTime date,
			Employee courier) {
		this.receiver = receiver;
		this.sender = sender;
		this.sudurzanie = sudurzanie;
		this.date = date;
		systemNumberCounter++;
		this.systemNumber = systemNumberCounter; 
	}


	public ObsluzvanClient getReceiver() {
		return receiver;
	}


	public void setReceiver(ObsluzvanClient receiver) {
		if(receiver != null){
		this.receiver = receiver;
		}
	}


	public ObsluzvanClient getSender() {
		return sender;
	}


	public void setSender(ObsluzvanClient sender) {
		if(sender != null){
		this.sender = sender;
		}
	}


	public String getSudurzanie() {
		return sudurzanie;
	}


	public void setSudurzanie(String sudurzanie) {
		if(sudurzanie != null & sudurzanie.length() > 1)
		this.sudurzanie = sudurzanie;
	}


	public LocalDateTime getDate() {
		return date;
	}


	public void setDate(LocalDateTime date) {
		this.date = date;
	}


	public Employee getCourier() {
		return courier;
	}


	public void setCourier(Employee courier) {
		this.courier = courier;
	}


	public int getSystemNumber() {
		return systemNumber;
	}


	public void setSystemNumber(int systemNumber) {
		this.systemNumber = systemNumber;
	}


	public static int getSystemNumberCounter() {
		return systemNumberCounter;
	}


	public static void setSystemNumberCounter(int systemNumberCounter) {
		Mail.systemNumberCounter = systemNumberCounter;
	}
	
	
	
	

}

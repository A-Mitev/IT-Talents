package Inheritance_HW;

public class Person {

	private static String name;
	private static int age;
	private static boolean isMale;

	Person(String name, int age, boolean isMale) {
		setName(name);
		setAge(age);
		setMale(isMale);
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		if (name != null && !name.equals("")) {
			Person.name = name;
		} else {
			Person.name = "Invalid name, must be defined correctly";
		}
	}

	public static  int getAge() {
		return age;
	}

	public void setAge(int age) {
		if (age > 0) {
			Person.age = age;
		} else {
			System.out.println("Wrong value for age");
			Person.age = 0;
		}
	}

	public static boolean getIsMale() {
		return isMale;
	}

	public void setMale(boolean isMale) {
		Person.isMale = isMale;
	}

	static void showPersonInfo() {
		System.out.println("Name - " + new Person("", 0, true).getName());
		System.out.println("Age - " + getAge());
		System.out.print("Gender - ");
		if (getIsMale()) {
			System.out.print("Male");
		} else {
			System.out.println("Female");
		}
		System.out.println();
	}
	
	
}

package Task3Scheduler;

import java.util.LinkedList;
import java.util.Queue;

public class Scheduler {

	private static Scheduler scheduler;

	private Scheduler() {
		setScheduler(scheduler);
	}

	public static Scheduler getScheduler() {
		return scheduler;
	}

	// tuk ne sum siguren dali e pravilno. Ako veche ima da izpolzvame tekushtiq
	// , ako nqma da napravim nov.
	public static void setScheduler(Scheduler scheduler) {
		if (scheduler != null) {
			Scheduler.scheduler = scheduler;
		} else {
			new Scheduler();
		}
	}

	public void push(ITask task) {
		if (task != null && !task.equals("")) {
			someTasks.add(task);
		}
	}

	public static Queue<ITask> someTasks = new LinkedList<ITask>();

	public static void main(String[] args) throws WrongWorkEntryException {
		
		Scheduler scheduler = getScheduler();
		
		ITask 1 = new Task("Da izveda kucheto");
		ITask 2 = new Task("Da nahranq kucheto");
		ITask 3 = new Task("Da si napravq kafe");
		ITask 4 = new Task("Da si vzema chadur");
		ITask 5 = new Task("Da zaklucha vratada");
		
		int loopStart = ((Task) task1).getIdNumber();
		int loopEnd = ((Task) task5).getIdNumber();
		
		System.out.println(loopStart);
		
		int start = 0;
//		for (int index = loopStart; index < loopEnd; index++) {
//			scheduler.push(task + start);
//		}
		

	}
}



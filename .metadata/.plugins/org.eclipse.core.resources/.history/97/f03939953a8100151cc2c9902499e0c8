import java.util.Scanner;

public class Arrays_Class_Tasks {
	public static void main(String[] args) {
		@SuppressWarnings("resource")
		Scanner scanner = new Scanner(System.in);
		
		int[] a = new int[10];
		
//		for (int i = 0; i < a.length; i++) {
//			a[i] = scanner.nextInt();
//		}
//		
//		for (int i = 0; i < a.length; i++) {
//			System.out.print(a[i] + " ");
//		}
		
		for (int i = 0; i < a.length; i++) {
			a[i] = scanner.nextInt();
		}
		int sumFirst = 0;
		int sumSecond = 0;
		int multiplyFirst = 1;
		int multiplySecond = 1;
		
		for (int i = ((a.length)/ 2) - 1; i > -1; i--) {
			if (i > 0){
				System.out.print(a[i] + ",");
			}
			if (i == 0){
				System.out.println(a[i]);
			}
			sumFirst += a[i];
			multiplyFirst *= a[i];
			
		}
		System.out.println();
		
		System.out.println("Sum = " + sumFirst + " " + " The product = " + multiplyFirst);
		
		System.out.println();
		
		for (int i = a.length -1; i > (a.length /2) -1  ; i--) {
			System.out.print(a[i] + ",");
			sumSecond += a[i];
			multiplySecond *= a[i];
		}
		System.out.println();
		System.out.println("The sum = " + sumSecond + " " + "The product" + multiplySecond);
	}
}

package Task1Bank;

import java.util.ArrayList;
import java.util.List;

public class Client implements IClient {

	private static final int MIN_LENGTH_FOR_ADDRESS = 5;
	private String name;
	private String address;
	private double moneyAmounth;
	private double salary;
	private List<BankProduct> clientProducts;

	

	public Client(String name, String address, double moneyAmounth, double salary) {
		this.setName(name);
		this.setAddress(address);
		this.moneyAmounth = moneyAmounth;
		this.setSalary(salary);
		this.clientProducts = new ArrayList<BankProduct>();
	}
	
	

	
	

	@Override
	public void openDeposit(Deposit d) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void creditRequest(Credit c) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void insertMoney() {
		// TODO Auto-generated method stub
		
	}
	
	public String getName() {
		return name;
	}

	public void setName(String name) {
		if (name != null && !name.equals(""))
			this.name = name;
	}

	public String getAddress() {
		return address;
	}
	
	public void setAddress(String address) {
		if(address != null && !address.equals("") && address.length() > MIN_LENGTH_FOR_ADDRESS){
		this.address = address;
		}
	}

	public double getMoneyAmounth() {
		return moneyAmounth;
	}

	public double getSalary() {
		return salary;
	}

	public void setSalary(double salary) {
		if (salary > 0) {
			this.salary = salary;
		}
	}

}

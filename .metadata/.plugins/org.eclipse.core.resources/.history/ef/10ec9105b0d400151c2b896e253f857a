package Task3Scheduler;

import java.util.LinkedList;
import java.util.Queue;

public class Scheduler {

	private static Scheduler scheduler;

	private Scheduler() {
		setScheduler(scheduler);
	}

	public static Scheduler getScheduler() {
		return scheduler;
	}

	// tuk ne sum siguren dali e pravilno. Ako veche ima da izpolzvame tekushtiq
	// , ako nqma da napravim nov.
	public static void setScheduler(Scheduler scheduler) {
		if (scheduler != null) {
			Scheduler.scheduler = scheduler;
		} else {
			new Scheduler();
		}
	}

	public void push(ITask task) {
		if (task != null && !task.equals("")) {
			someTasks.add(task);
		}
	}

	public static Queue<ITask> someTasks = new LinkedList<ITask>();


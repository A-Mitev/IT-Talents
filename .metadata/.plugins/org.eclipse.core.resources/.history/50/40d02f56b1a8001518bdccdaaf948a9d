package Inheritance_HW;

import java.nio.channels.ShutdownChannelGroupException;

public class Demo{

	public static void main(String[] args) {

		Person[] peoples = new Person[3];

		Student alex = new Student("Alex", 22, true, 4.5);
		Employee pesho = new Employee("Pesho", 32, true, 999, 8);
		Employee gosho = new Employee("Gosho", 33, true, 1100, 7);
		
	
		
		

		peoples[0] = alex;
		peoples[1] = pesho;
		peoples[2] = gosho;
		
		
		for (int index = 0; index < peoples.length; index++) {
			if (peoples[index] instanceof Student) {
				alex.showStudentInfo(peoples[index]);
			}
			if(peoples[index].getClass().isInstance(pesho)){
				System.out.println(peoples[index].getName() + " is Employee");
			}
		}

	}

}

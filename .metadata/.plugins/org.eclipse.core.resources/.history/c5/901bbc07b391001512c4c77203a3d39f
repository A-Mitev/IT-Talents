public class Even_sum_Recursion_task {

	static int evenFunction(int number) {
		if (number == 2) {
			return 2;
		}
		if (number < 2) {
			return 0;
		}
		if (number % 2 == 0) {
			return number + evenFunction(number - 2);
		} else {
			return evenFunction(number - 1);
		}
	}

	public static void main(String[] args) {
		int number = 5;
		System.out.println(evenFunction(number));
	}
}

import java.util.Arrays;

public class Selection_Sort {
	public static void main(String[] args) {

		int[] array = { 2, 1, 4, 3, 3, 4, 5 };

		int endIndex = array.length - 1;
		int startIndex = 0;
		
		int currMaxIndex = 0;
		int currMinIndex = 0;
		int maxNumber = Integer.MIN_VALUE;
		int minNumber = Integer.MAX_VALUE;

		for (int i = 0; i < array.length; i++) {
			for (int index = i; index < endIndex; index++) {
				if (array[index] > maxNumber) {
					maxNumber = array[index];
					currMaxIndex = index;
				}
				if (array[index] < minNumber) {
					minNumber = array[index];
					currMinIndex = index;
				}
			}
			int endIndexNumber = array[endIndex];
			array[endIndex] = array[currMaxIndex];
			array[currMaxIndex] = endIndexNumber;
			endIndex--;
			
			int startIndexNumber = array[startIndex];
			array[startIndex] = array[currMinIndex];
			array[currMinIndex] = startIndexNumber;
			startIndex++;
			System.out.println(Arrays.toString(array));
			maxNumber = Integer.MIN_VALUE;
			minNumber = Integer.MAX_VALUE;

		}
		System.out.println(Arrays.toString(array));
	}

}

package servlet;

import java.io.IOException;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import emag.Cart;

@WebServlet("/Login")
public class LoginServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	public LoginServlet() {
	}
	
	protected void doGet(){
		
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		String username = request.getParameter("email");
		String password = request.getParameter("password");


		 try {
			userExist(username);
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	
		try {
			if (userExist(username)) {
				HttpSession session = request.getSession();
				// session.setMaxInactiveInterval(5);
				session.setAttribute("ShoppingCart", new Cart());
				session.setAttribute("name", username);
				response.sendRedirect("./");
			} else {
				response.sendRedirect("./BadLogin.html");
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

	public boolean userExist(String username) throws SQLException {
		try (Connection connect = DriverManager.getConnection("jdbc:mysql://localhost:3306/mydb?useSSL=false", "root",
				"root")){
			Statement statement = connect.createStatement();
			String SQL = "SELECT * FROM client WHERE email='" + username + "'";
			ResultSet rs = statement.executeQuery(SQL);
			if (rs.next()) {
				return true;
			} else {
				return false;
			}
		}
	}

}

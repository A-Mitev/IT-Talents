package exam;

public class Person {

	private String Name;
	private String city;

	public Person(String name, String city) throws InvalidNameExeption, InvalidCityException {
		setName(name);
		setCity(city);
	}

	public String getName() {
		return Name;
	}

	public String getCity() {
		return city;
	}

	public void setName(String name) throws InvalidNameExeption {
		if (name != null & (name.length() > 10)) {
			Name = name;
		} else {
			throw new InvalidNameExeption("The name must be full name");
		}
	}

	public void setCity(String city) throws InvalidCityException {
		if ((city.equals("Sofia")) | (city.equals("Veliko Turnovo") | (city.equals("Varna") | (city.equals("Ruse") | (city.equals("Plovdiv")))))) {
			this.city = city;
		} else {
			throw new InvalidCityException("The city myst be one of the folowing: S, VT, V, R, P");
		}

	}
}

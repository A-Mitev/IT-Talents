import java.util.Arrays;

public class Selection_sort_test {

	public static int[] slectionSortFunc(int[] array) {
		int temp = 0;
		int minIndex = 0;

		for (int index = 0; index < array.length - 1; index++) {
			minIndex = index;
			for (int j = index + 1; j < array.length; j++) {
				if (array[j] < array[minIndex]) {
					minIndex = j;
				}
			}
			if (minIndex != index) {
				temp = array[index];
				array[index] = array[minIndex];
				array[minIndex] = temp;
			}
		}
		return array;
	}

	public static void main(String[] args) {
		int[] array = {2,1,4,3,6,6,7,8};
		
		System.out.println(Arrays.toString(slectionSortFunc(array)));
	}
}
package tests;

public class Kon implements Runnable {

	private static final int MILES_TO_RUN = 150;

	@Override
	public void run() {
		String name = Thread.currentThread().getName();
		System.out.println(name + "Zapochna da bqga");

		for (int miles = 0; miles < MILES_TO_RUN; miles++) {

			try {
				Thread.sleep(100);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();

			}
			System.out.println("Do sega " + name + " izbqga " + miles);
		}
		System.out.println(name + " finishira");

	}

}
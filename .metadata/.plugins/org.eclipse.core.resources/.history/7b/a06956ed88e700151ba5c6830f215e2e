package exam;

import exceptions.InvalidCityException;
import exceptions.InvalidNameExeption;
import exceptions.InvalidPersonalNumberException;

public abstract class Person {

	private String name;
	private String tel;
	private City address;
	private String personalNumber;

	

	public Person(String name, String tel, City address, String personalNumber) throws InvalidNameExeption, InvalidCityException {
		this.setName(name);
		this.setTel(tel);
		this.setCity(address);
		this.setPersonalNumber(personalNumber);
	}

	public String getName() {
		return name;
	}

	public void setName(String name) throws InvalidNameExeption {
		if (name != null & (name.length() > 10)) {
			this.name = name;
		} else {
			throw new InvalidNameExeption("The name must be full name");
		}
	}

	public void setCity(City address) throws InvalidCityException {
		if (address != null){
			this.address = address;
		} else {
			throw new InvalidCityException("The city myst be one of the folowing: Sofia, V_T, Varna, Ruse, Pld");
		}
	}
	
	public void setTel(String tel) {
		if (tel != null){
		this.tel = tel;
		}
	}

	public void setPersonalNumber(String personalNumber) {
		if (!(personalNumber.length() < 10)){
		this.personalNumber = personalNumber;
		} else {
			throw new InvalidPersonalNumberException("The personal ID number mus be at least 10 digits");
		}
	}

}

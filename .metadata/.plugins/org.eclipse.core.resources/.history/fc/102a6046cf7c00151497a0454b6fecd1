import java.util.Scanner;

public class Task11Test {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		
		int num = scanner.nextInt();
		
		for (int i = 0; i < num; i++) {
			for (int j = 0; j < num - 1; j++) {
				System.out.println(" ");
			}
			for (int j = 0; j < num /2 ; j++) {
				System.out.println("*");
			}
		}
	}

}

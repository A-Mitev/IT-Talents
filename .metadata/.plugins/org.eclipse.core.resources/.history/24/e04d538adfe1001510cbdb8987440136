package tast1_1Bank;

public class Deposit extends BankProduct{
	
	
	private double monthlyPayment;
	private double availability;
	private String name;

	public String getName() {
		return name;
	}

	public void setName(String name) throws InvalidDepositNameException {
		if(name != null && !name.equals("") && name.length() > 3){
		this.name = name;
		} else {
			throw new InvalidDepositNameException("The name mus be at least 4 symbols");
		}
	}

	public Deposit(double annualRate, int period) {
		super(annualRate, period);
	}

	public double getMonthlyPayment() {
		return monthlyPayment;
	}

	public void setMonthlyPayment(double monthlyPayment) {
		if(monthlyPayment > 0){
		this.monthlyPayment = monthlyPayment;
		}
	}

	public double getAvailability() {
		return availability;
	}

	public void setAvailability(double availability) {
		if(availability > 0){
		this.availability = availability;
		}
	}

}

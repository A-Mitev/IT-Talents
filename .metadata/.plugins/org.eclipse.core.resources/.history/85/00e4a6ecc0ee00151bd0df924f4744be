package bg.ittalents.dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

public class DolphinDAO {

	public List<Dolphin> getAll() {
		Connection con = null;
		try {
			List<Dolphin> dolphins = new ArrayList<>();
			try {
				Class.forName("com.mysql.jdbc.Driver");
			} catch (ClassNotFoundException e) {
				e.printStackTrace();
			}
			con = DriverManager.getConnection("jdbc:mysql://localhost:3306/Dolphins", "root", "root");
			ResultSet result = con.createStatement().executeQuery("Select * from dolphin;");

			while (result.next()) {
				dolphins.add(new Dolphin(result.getInt(1), result.getString(2), result.getString(3)));
			}
			return dolphins;
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			try {
				if (con != null)
					con.close();
			} catch (SQLException e) {
				e.printStackTrace();
			}
		}
		return null;
	}

	public Dolphin putDolphin(String name, String color) {
		Connection con = null;
		try {
			Class.forName("com.mysql.jdbc.Driver");
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		}
		try {
			con = DriverManager.getConnection("jdbc:mysql://localhost:3306/Dolphins", "root", "root");
		} catch (SQLException e) {
			e.printStackTrace();
		}
		try {
			PreparedStatement input = con.prepareStatement("INSERT into Dolphin Values(null,?, ?)");
			input.setString(1, name);
			input.setString(2, color);
		} catch (SQLException e) {
			e.printStackTrace();
		}
		return null;
	}
}

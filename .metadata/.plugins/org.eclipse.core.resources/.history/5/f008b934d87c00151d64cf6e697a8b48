import java.util.Scanner;

public class Task11Test {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		
		int num = scanner.nextInt();
		
		for (int i = 1; i < num; i++) {
			for (int j = 0; j < num - i; j++) {
				System.out.print(" ");
			}
			for (int j = 1; j < ((num - i) / 2); j++) {
				System.out.print("*");
				
			}
			System.out.println();
		}
	}
}
